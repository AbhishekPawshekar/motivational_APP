<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".home_click"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="serif"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:hint="Search" />

        <ImageView
            android:id="@+id/searchview_image"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search_button_blue" />

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/imageSlider"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            app:auto_cycle="true"
            app:delay="3000"
            app:period="3000" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/motivation_card"
            android:background="@drawable/motivation_button_background"
            android:layout_marginTop="180dp"
            android:layout_alignTop="@+id/imageSlider"
            android:layout_alignRight="@+id/centerfinder"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/motivation_button_background"
                android:id="@+id/motivation_reletive">
                <androidx.cardview.widget.CardView
                    android:id="@+id/motivation_card_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="50dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/motivation_sample_icon"
                        android:src="@drawable/motivation_icon"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Motivation"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/yoga_card"
            android:layout_marginTop="180dp"
            android:layout_alignTop="@+id/meditation_card"
            android:layout_alignRight="@+id/centerfinder"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/yoga_button_background"
                android:id="@+id/yoga_reletive">
                <androidx.cardview.widget.CardView
                    android:id="@+id/yoga_card_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="50dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/yoga_sample_icon"
                        android:src="@drawable/yoga_icon"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Yoga"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/centerfinder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/meditation_card"
            android:layout_alignLeft="@+id/centerfinder"
            android:layout_alignTop="@+id/imageSlider"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_marginTop="180dp">
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/meditation_button_background"
              android:id="@+id/meditation_reletive">
              <androidx.cardview.widget.CardView
                  android:id="@+id/meditation_card_icon"
                  android:layout_width="90dp"
                  android:layout_height="90dp"
                  app:cardCornerRadius="50dp"
              android:layout_centerVertical="true"
                  android:layout_centerHorizontal="true"
                  >
              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/meditation_sample_icon"
                  android:src="@drawable/meditation_icon"
                  android:scaleType="centerCrop"
                  />
              </androidx.cardview.widget.CardView>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Meditation"
                  android:layout_alignParentBottom="true"
                  android:textStyle="bold"
                  android:textColor="@color/black"
                  android:textSize="18dp"/>
          </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/artical_card"
            android:layout_alignLeft="@+id/centerfinder"
            android:layout_alignTop="@+id/meditation_card"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/story_button_background"
            android:layout_marginTop="180dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/story_button_background"
                android:id="@+id/artical_reletive">
                <androidx.cardview.widget.CardView
                    android:id="@+id/artical_card_icon"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:cardCornerRadius="50dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/artical_sample_icon"
                        android:src="@drawable/artical_icon"
                        android:scaleType="centerCrop"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Artical"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    </ScrollView>
</FrameLayout>