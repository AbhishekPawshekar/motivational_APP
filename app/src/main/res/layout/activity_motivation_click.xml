<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".motivation_click">
    <include layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:id="@+id/rl1">
        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_alignRight="@+id/centerfinder">

            <TextView
                android:id="@+id/request_to_quotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Quotes"
                android:textColor="@color/dark_blue" />
        </RelativeLayout>

        <TextView
            android:id="@+id/centerfinder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_alignLeft="@+id/centerfinder">

            <TextView
                android:id="@+id/request_to_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Video"
                android:textColor="@color/dark_blue" />

        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/motivation_select_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/rl1"/>
</RelativeLayout>